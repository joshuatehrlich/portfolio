---
const { platform, username } = Astro.props;
---
<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<style>
	a {
		padding: 0.5rem 1rem;
		margin: 0.1rem;
		color: white;
		background-color: black;
		text-decoration: none;
		transition: 0.2s;
		outline-width: 2px;
		outline-style: solid;
		outline-color: black;
	}
	a:hover {
		background-color: rgba(0,0,0,0);
		color: black;
	}
</style>